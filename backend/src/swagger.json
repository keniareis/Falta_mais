    "components": {
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            }
        },
        "schemas": {
            "User": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "email": {
                        "type": "string"
                    },
                    "password": {
                        "type": "string"
                    }
                }
            },
            "Discipline": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "total_classes": {
                        "type": "Number"
                    },
                    "total_absence": {
                        "type": "Number"
                    },
                    "current_absence": {
